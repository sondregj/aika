{
	"name": "aika",
	"version": "1.0.0",
	"description": "Tiny HTTP library with middleware support",
	"author": "Sondre Gjellestad <sondre.gjellestad@hotmail.com> (https://sondregjellestad.space)",
	"homepage": "https://github.com/sondregj/aika#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sondregj/aika.git"
	},
	"license": "MIT",
	"main": "dist/index.js",
	"types": "dist/index.d.js",
	"declaration": true,
	"scripts": {
		"build": "tsc",
		"format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
		"lint": "tslint -p tsconfig.json",
		"test": "jest",
		"preversion": "npm run lint",
		"version": "npm run format && git add -A src",
		"postversion": "git push && git push --tags",
		"prepublishOnly": "npm ci && npm test && npm run lint && npm run build"
	},
	"keywords": [
		"http",
		"https"
	],
	"bugs": {
		"url": "https://github.com/sondregj/aika/issues"
	},
	"dependencies": {
		"cross-fetch": "^3.0.4"
	},
	"devDependencies": {
		"@types/jest": "^24.0.22",
		"jest": "^24.9.0",
		"prettier": "^1.18.2",
		"ts-jest": "^24.1.0",
		"tslint": "^5.20.1",
		"tslint-config-prettier": "^1.18.0",
		"tslint-immutable": "^6.0.1",
		"typescript": "^3.7.2"
	},
	"files": [
		"dist/**/*"
	]
}
